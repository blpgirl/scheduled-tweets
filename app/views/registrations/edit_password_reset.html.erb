<h1>Reset your password</h1>

<%= form_with(model: @user, url: password_reset_edit_path(token: params[:token])) do |f| %>
  <%= render "shared/form_errors", form: f %>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "Enter your password", class: "form-control" %>
  </div>

    <div class="form-group">
          <%= f.submit('Reset Password'.html_safe,
                class: "btn btn-primary") %>
    </div>
<% end %>
