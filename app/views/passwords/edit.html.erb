<h1>Edit Password</h1>

<%= form_with(model: @user, url: edit_password_path, html: {class: ""}) do |f| %>

  <% if @user.errors.any? %>
  <div class="alert alert-warning mt-4" role="alert">
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  </div>
  <% end %>

    <div class="form-group">
      <%= f.label "Email:" %>
      <%= @user.email %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "Enter your password", class: "form-control" %>
    </div>

    <div class="form-group">
          <%= f.submit('Update Password'.html_safe,
                class: "btn btn-primary") %>
    </div>
<% end %>
