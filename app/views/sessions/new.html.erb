<h1>Log in</h1>

<%= form_with(url: sign_in_path, html: {class: ""}) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
      <%= link_to "Forgot your password?", password_reset_path %>
    </div>

    <div class="form-group">
          <%= f.submit('Log In'.html_safe,
                class: "btn btn-primary") %>
    </div>
<% end %>
